        android:icon="@drawable/main_mascot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_mascot"
        android:supportsRtl="true"
        android:theme="@style/Theme.WildcatFreshFinds"
        tools:targetApi="31">
        <activity
            android:name=".activity.CommunityGuidelinesActivity"
            android:exported="false" />


        <activity
            android:name=".activity.HomeActivity"
            android:exported="true" android:windowSoftInputMode="adjustPan"
