<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/background">

    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/maroon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anybody_black"
        android:gravity="center"
        android:text="@string/profile"
        android:textColor="@color/gold"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cover_photo"
        app:layout_constraintBottom_toBottomOf="@+id/star3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_container"
        android:layout_width="0dp"
        android:layout_height="355dp"

        app:layout_constraintWidth_max="355dp"
        android:background="@color/container_bg"
        app:cardBackgroundColor="@color/container_bg"
        app:cardCornerRadius="12dp"
        app:cardElevation="11dp"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/footer_nav_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"

        />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="152dp"
        android:layout_height="149dp"
        android:background="@drawable/profile_icon"
        android:elevation="11dp"
        app:layout_constraintBottom_toTopOf="@id/profile_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_container"
        android:contentDescription="@string/profile_icon" />

    <TextView
        android:id="@+id/user_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="11dp"

        app:layout_constraintTop_toBottomOf="@id/profile_icon"
        app:layout_constraintStart_toStartOf="@id/profile_container"
        app:layout_constraintEnd_toEndOf="@id/profile_container"

        android:text="@string/john_doe"
        android:fontFamily="@font/anybody_black"
        android:textSize="25sp"
        android:textColor="@color/maroon"
        />

    <ImageView
        android:id="@+id/star1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="11dp"

        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="@id/profile_container"
        app:layout_constraintEnd_toStartOf="@id/star2"

        app:layout_constraintHorizontal_chainStyle="packed"

        android:src="@drawable/star_icon"
        android:contentDescription="@string/star_icon" />

    <ImageView
        android:id="@+id/star2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="11dp"

        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toEndOf="@id/star1"
        app:layout_constraintEnd_toStartOf="@id/star3"

        android:src="@drawable/star_icon"
        android:contentDescription="@string/star_icon" />

    <ImageView
        android:id="@+id/star3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="11dp"

        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toEndOf="@id/star2"
        app:layout_constraintEnd_toStartOf="@id/star4"

        android:src="@drawable/star_icon"
        android:contentDescription="@string/star_icon" />


    <ImageView
        android:id="@+id/star4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="11dp"

        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toEndOf="@id/star3"
        app:layout_constraintEnd_toStartOf="@id/star5"

        android:src="@drawable/star_icon"
        android:contentDescription="@string/star_icon" />

    <ImageView
        android:id="@+id/star5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="11dp"

        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toEndOf="@id/star4"
        app:layout_constraintEnd_toEndOf="@id/profile_container"

        android:src="@drawable/star_icon"
        android:contentDescription="@string/star_icon" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="11dp"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="@id/profile_container"
        app:layout_constraintEnd_toStartOf="@id/email_value"
        app:layout_constraintTop_toBottomOf="@id/star3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:src="@drawable/email_icon"

        />

    <TextView
        android:id="@+id/email_value"

        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:elevation="11dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/star3"
        app:layout_constraintStart_toEndOf="@id/email_icon"
        app:layout_constraintBottom_toBottomOf="@id/email_icon"
        app:layout_constraintEnd_toEndOf="@id/profile_container"
        android:text="@string/john_doe_email_com"
        android:textColor="@color/maroon"
        android:textSize="16sp"
        android:fontFamily="@font/anybody_bold"
        />

    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:elevation="11dp"
        android:src="@drawable/password_icon"
        app:layout_constraintEnd_toStartOf="@id/password_value"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/email_icon"
        app:layout_constraintTop_toBottomOf="@id/email_value"

        />

    <TextView
        android:id="@+id/password_value"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:elevation="11dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/email_value"
        app:layout_constraintStart_toEndOf="@id/password_icon"
        app:layout_constraintBottom_toBottomOf="@id/password_icon"
        android:text="@string/pass_value"
        android:textColor="@color/maroon"
        android:textSize="30sp"
        android:fontFamily="@font/anybody_black"
        android:gravity="center_vertical"
        />



    <FrameLayout

        android:layout_width="120dp"
        android:layout_height="40dp"
        android:elevation="50dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintTop_toBottomOf="@id/password_value"
        app:layout_constraintStart_toStartOf="@id/profile_container"
        app:layout_constraintEnd_toEndOf="@id/profile_container"
        app:layout_constraintBottom_toBottomOf="@id/profile_container"

        >

        <Button
            android:id="@+id/edit_button"
            android:elevation="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@drawable/login_register_button"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/anybody_regular"
            />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/settings_container"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/container_bg"
        app:cardBackgroundColor="@color/container_bg"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"


        app:layout_constraintBottom_toTopOf="@id/footer_nav_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_container"

        android:clickable="true"
        android:focusable="true"
        />





    <ImageView
        android:id="@+id/settings_icon"

        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:elevation="11dp"
        app:layout_constraintStart_toStartOf="@id/settings_container"
        app:layout_constraintTop_toTopOf="@id/settings_container"
        app:layout_constraintBottom_toBottomOf="@id/settings_container"
        app:layout_constraintEnd_toStartOf="@id/settings_label"
        android:src="@drawable/settings_icon"

        android:clickable="true"
        android:focusable="true"
        />

    <TextView
        android:id="@+id/settings_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:elevation="11sp"
        app:layout_constraintStart_toEndOf="@id/settings_icon"
        app:layout_constraintTop_toTopOf="@id/settings_container"
        app:layout_constraintBottom_toBottomOf="@id/settings_container"
        app:layout_constraintEnd_toEndOf="@id/settings_container"

        android:text="@string/settings"
        android:textColor="@color/gold"
        android:fontFamily="@font/anybody_regular"
        android:textSize="20sp"
        android:textStyle="bold"

        android:clickable="true"
        android:focusable="true"
        />




    <ImageView
        android:id="@+id/home_nav_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"

        app:layout_constraintStart_toStartOf="@id/footer_nav_settings"
        app:layout_constraintTop_toTopOf="@id/footer_nav_settings"
        app:layout_constraintBottom_toTopOf="@id/home_nav_label"
        app:layout_constraintEnd_toStartOf="@id/cart_nav_icon"
        android:translationY="4dp"
        android:elevation="11dp"
        android:src="@drawable/home_icon"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/home_nav_label"
        android:translationY="-5dp"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_nav_icon"
        app:layout_constraintBottom_toBottomOf="@id/footer_nav_settings"
        app:layout_constraintStart_toStartOf="@id/home_nav_icon"
        app:layout_constraintEnd_toEndOf="@id/home_nav_icon"
        android:gravity="center"
        android:elevation="11dp"
        android:text="@string/home"
        android:textColor="@color/maroon"
        android:fontFamily="@font/anybody_regular"

        />


    <ImageView
        android:id="@+id/cart_nav_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"

        app:layout_constraintStart_toEndOf="@id/home_nav_icon"
        app:layout_constraintTop_toTopOf="@id/footer_nav_settings"
        app:layout_constraintBottom_toTopOf="@id/cart_nav_label"
        app:layout_constraintEnd_toStartOf="@id/transaction_nav_icon"
        android:translationY="4dp"
        android:elevation="11dp"
        android:src="@drawable/cart_icon"

        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/cart_nav_label"
        android:translationY="-5dp"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cart_nav_icon"
        app:layout_constraintBottom_toBottomOf="@id/footer_nav_settings"
        app:layout_constraintStart_toStartOf="@id/cart_nav_icon"
        app:layout_constraintEnd_toEndOf="@id/cart_nav_icon"
        android:gravity="center"
        android:elevation="11dp"
        android:text="@string/cart"
        android:textColor="@color/maroon"
        android:fontFamily="@font/anybody_regular"

        />


    <ImageView
        android:id="@+id/transaction_nav_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"

        app:layout_constraintStart_toEndOf="@id/cart_nav_icon"
        app:layout_constraintTop_toTopOf="@id/footer_nav_settings"
        app:layout_constraintBottom_toTopOf="@id/transaction_nav_label"
        app:layout_constraintEnd_toStartOf="@id/profile_nav_icon"
        android:translationY="4dp"
        android:elevation="11dp"
        android:src="@drawable/transaction_icon"

        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/transaction_nav_label"
        android:translationY="-5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/transaction_nav_icon"
        app:layout_constraintBottom_toBottomOf="@id/footer_nav_settings"
        app:layout_constraintStart_toStartOf="@id/transaction_nav_icon"
        app:layout_constraintEnd_toEndOf="@id/transaction_nav_icon"
        android:gravity="center"
        android:elevation="11dp"
        android:text="@string/transaction"
        android:textColor="@color/maroon"
        android:fontFamily="@font/anybody_regular"

        />

    <ImageView
        android:id="@+id/profile_nav_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"

        app:layout_constraintStart_toEndOf="@id/transaction_nav_icon"
        app:layout_constraintTop_toTopOf="@id/footer_nav_settings"
        app:layout_constraintBottom_toTopOf="@id/profile_nav_label"
        app:layout_constraintEnd_toEndOf="@id/footer_nav_settings"
        android:translationY="4dp"
        android:elevation="11dp"
        android:src="@drawable/profile_nav_icon"

        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/profile_nav_label"
        android:translationY="-5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_nav_icon"
        app:layout_constraintBottom_toBottomOf="@id/footer_nav_settings"
        app:layout_constraintStart_toStartOf="@id/profile_nav_icon"
        app:layout_constraintEnd_toEndOf="@id/profile_nav_icon"
        android:gravity="center"
        android:elevation="11dp"
        android:text="@string/profile"
        android:textColor="@color/maroon"
        android:fontFamily="@font/anybody_regular"

        />



    <View
        android:id="@+id/footer_nav_settings"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/footer_nav_bg"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"


        app:layout_constraintStart_toStartOf="parent" />


    <!--    <View-->
    <!--        android:id="@+id/s"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="120dp"-->
    <!--        android:background="@drawable/cover_photo"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/header"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>