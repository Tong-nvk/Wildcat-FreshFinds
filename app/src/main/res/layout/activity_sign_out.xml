<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SignOutActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="70dp"

        app:layout_constraintStart_toStartOf="@id/log_out_container"
        app:layout_constraintTop_toTopOf="@id/log_out_container"
        app:layout_constraintBottom_toTopOf="@id/log_out_container"
        app:layout_constraintEnd_toEndOf="@id/log_out_container"

        android:translationY="-11dp"
        android:src="@drawable/sitting_tiger"
        android:elevation="12dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/log_out_container"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="@color/container_bg"
        app:cardCornerRadius="20dp"

        app:cardElevation="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="300dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="360dp" />

    <TextView
        android:id="@id/log_out_label"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="30dp"
        android:elevation="11dp"
        app:layout_constraintTop_toTopOf="@id/log_out_container"
        app:layout_constraintBottom_toTopOf="@id/log_out_button_container"
        app:layout_constraintEnd_toEndOf="@id/log_out_container"
        app:layout_constraintStart_toStartOf="@id/log_out_container"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:text="@string/are_you_sure_you_want_to_log_out"
        android:textSize="20sp"
        android:textColor="@color/gold"
        android:fontFamily="@font/anybody_bold"

        />

    <FrameLayout
        android:id="@+id/log_out_button_container"

        android:layout_width="0dp"
        android:layout_height="50dp"

        app:layout_constraintWidth_max="160dp"
        app:layout_constraintTop_toBottomOf="@+id/log_out_label"
        app:layout_constraintEnd_toEndOf="@id/log_out_container"
        app:layout_constraintStart_toStartOf="@id/log_out_container"
        app:layout_constraintBottom_toTopOf="@id/cancel_button_container"
        android:elevation="12dp"

        android:layout_marginBottom="5dp"

        >

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/container_bg"
            android:textSize="19sp"
            android:text="@string/log_out"

            android:fontFamily="@font/anybody_bold"
            android:background="@drawable/login_register_button"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/cancel_button_container"

        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintWidth_max="160dp"
        app:layout_constraintTop_toBottomOf="@+id/log_out_button_container"
        app:layout_constraintEnd_toEndOf="@id/log_out_container"
        app:layout_constraintStart_toStartOf="@id/log_out_container"
        app:layout_constraintBottom_toBottomOf="@id/log_out_container"
        android:elevation="12dp"

        android:layout_marginBottom="5dp"

        >

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/maroon"
            android:textSize="19sp"
            android:text="@string/cancel"

            android:fontFamily="@font/anybody_bold"
            android:background="@drawable/transparent_container_button"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>