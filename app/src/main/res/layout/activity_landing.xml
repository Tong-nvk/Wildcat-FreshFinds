<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity"
    android:background="@color/background"
    android:fillViewport="true">





    <!--MASCOTS-->
    <ImageView
        android:id="@+id/landing_mascot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/landing_left_claw"
        app:layout_constraintEnd_toStartOf="@id/landing_right_claw"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/landing_mascot"
        android:contentDescription="@string/tiger_mascot_for_landing_page"
    />




    <ImageView
        android:id="@+id/landing_left_claw"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:adjustViewBounds="true"
        android:scaleType="fitStart"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/landing_mascot"
        app:layout_constraintBottom_toTopOf="@id/view_sss"
        android:src="@drawable/left_claw"

        android:contentDescription="@string/left_claw_mark_of_a_tiger" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_max_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-1dp" />

    <ImageView
        android:id="@+id/landing_right_claw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/landing_mascot"
        app:layout_constraintBottom_toTopOf="@id/view_ssss"

        android:src="@drawable/right_claw"
        android:contentDescription="@string/right_claw_mark_of_a_tiger"

        />


    <View
        android:id="@+id/view_sss"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toTopOf="@id/landing_login_button"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        />

    <View
        android:id="@+id/view_ssss"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toTopOf="@id/landing_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

